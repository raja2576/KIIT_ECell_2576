<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - KIIT E-Cell</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar">
            <h1>KIIT E-Cell</h1>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="#">Contact</a>
                <form action="/logout" method="post"><button class="btn">Logout</button></form>
            </div>
        </nav>
    </header>

    <section class="dashboard">
        <h2>Welcome to Your Dashboard</h2>
        <h3>Your Domain: <%= techDomain %></h3>

        <div class="tasks-section">
            <h4>Your Assigned Tasks</h4>
            <ul id="tasks-list">
                <% tasks.forEach(task => { %>
                    <li class="task-item"><%= task %></li>
                <% }) %>
            </ul>
        </div>

        <div class="meetings-section">
            <h4>Upcoming Meetings</h4>
            <ul id="meetings-list">
                <% upcomingMeetings.forEach(meeting => { %>
                    <li class="meeting-item"><%= meeting %></li>
                <% }) %>
            </ul>
        </div>
    </section>

    <footer>
        <div class="footer-content">
            <p>Made with love by KIIT E-Cell Team</p>
        </div>
    </footer>

    <script>
        $(document).ready(function() {
            $('#tasks-list li, #meetings-list li').hide().fadeIn(1000);
        });
    </script>
</body>
</html>
